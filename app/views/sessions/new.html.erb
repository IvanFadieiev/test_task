<center>
  <h1>Авторизация</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %><br>
      <%= f.text_field :email %><br>

      <%= f.label :password %><br>
      <%= f.password_field :password %><br><br><br>

      <%= f.submit "Авторизация", class: "btn btn-large btn-primary" %>
    <% end %><br>

    <p>Новый пользователь? <%= link_to "Регистрация!", signup_path %></p>
</center>